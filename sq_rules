        r (K     R
        rr       R2
     _) rr       R2

     _) rre (gulla R2'e


.group s
        s        s
        sh       S

//   L02) sh       @-S     // epenthetic

.group t
        t        t
        th       T

.group u
        u        u
        
        u (eshëm 'u
        u (eshem 'u //probably refers to the above
        
        u (n_    =u
        u (an_   'u
        u (ara_  'u
        u (esve_ 'u
        u (esi_  'u
        
        u (lla_  =u // petulla, mjegullë
        u (llë_  =u
        u (ll_   =u
        
   @s)  u (r_    =u
   @k)  u (r_    =u

